<div class="body">
	<div class="container">
		<p id="class"></p>
		<% if @book.errors.any? %>
			<div id="error_explanation" class="alert-danger">
				<ul>
 				 	<h2><%= @book.errors.count %>件のerrorが発生しました</h2>
				 	<% @book.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
		            <% end %>
				 </ul>
			</div>
        <% end %>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>

				<%= form_for(@book) do |f| %>

				<div class="field row">
					<label for="book_title">Title</label>
					<%= f.text_field :title, class:"col-xs-12 book_title" %>
				</div>

				<div class="field row">
					<label for="book_opinion">Opinion</label>
					<%= f.text_field :body, class:"col-xs-12 book_body" %>
				</div>

				<div class="actions row">
					<%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>
				</div>

				<a><%= link_to "Show", book_path(@book) %></a>
				|
				<a class="back" href="/books">Back</a>

				<% end %>

			</div>
		</div>
	</div>
</div>
