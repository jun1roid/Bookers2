<div class="body">
<div class="container">
<% if flash[:notice] %>
<p id="notice"></p>
	<p><%= flash[:notice] %></p>
    <% if @book.errors.any? %>
            <div id="error_explanation" class="alert-danger">
                <ul>
                    <h2><%= @book.errors.count %>件のエラーが発生しました</h2>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                 </ul>
            </div>
        <% end %>
<% end %>

<div class="row">
	<%= render 'users/list', user: @book.user, book: @new_book %>

    <div class="col-xs-9">
    	<h2>Book detail</h2>
    	<table class="table">
    		<tbody>
    			<tr>
    				<td>
                        <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', class:"attachment user profile_image", fallback: "no_image.jpg", size:"40x40" %><br>
                        <%= link_to @user.name, user_path(@book.user) %>
    				</td>
    				<td>
    					<%= @book.title %>
    				</td>
    				<td>
    					<%= @book.body %>
    				</td>
                    <% if @book.user == current_user %>
    				<td>
    					<%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success edit_book_13519" %>
    				</td>
    				<td>
    					<%= link_to "Destroy", book_path(@book), method: :delete, class:"btn-sm btn-danger destroy_book_13519" %>
    				</td>
                    <% end %>
    			</tr>
    		</tbody>
    	</table>
    </div>
</div>
</div>
</div>

