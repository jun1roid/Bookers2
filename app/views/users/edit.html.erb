<div class="body">
	<div class="container">
		<p id="notice"></p>
		<% if @user.errors.any? %>
			<div id="error_explanation" class="alert-danger">
				<ul>
 				 	<h2><%= @user.errors.count %>件のerrorが発生しました</h2>
				 	<% @user.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
		            <% end %>
				 </ul>
			</div>
        <% end %>
		<h2>User info</h2>
		<%= form_for(@user) do |f| %>
		<div class="field">
			<label for="user_name">Name</label>
			<%= f.text_field :name, autofocus: true, class:"name", id:"user_name" %>
		</div>
		<div class="field">
			<label for="user_image">Image</label>
			<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
		</div>
		<div class="field">
			<label for="user_introduction">Introduction</label>
			<%= f.text_field :introduction, autofocus: true, class:"introduction", id:"user_introduction" %>
		</div>
		<div class="actions">
			<%= f.submit "Update User" %>
		</div>
		<% end %>
	</div>
</div>

